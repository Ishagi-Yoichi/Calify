generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  url=env("DATABASE_URL")
  provider = "postgresql"
}

model Event {
  id Int @id @default(autoincrement())
  title String
  description String?
  startDate DateTime
  endDate DateTime
  isRecurring Boolean?
  frequency String?
  daysOfWeek String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([startDate])
}